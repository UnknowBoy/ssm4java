package com.ruishun.controller;

import java.util.HashMap;
import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.ruishun.pojo.base.ErpUser;
import com.ruishun.service.base.ErpMenuService;
import com.ruishun.service.base.ErpUserService;

/**
 * <p>Title: UserController</p>
 * <p>Description: 用户功能</p>
 * <p>Company: ruishun</p>
 * @author weil
 * @date 2017年12月29日
 */
@Controller
public class MainController {
	@Autowired
	private ErpUserService erpUserService;
	@Autowired
	private ErpMenuService erpMenuService;
	private Logger logger = Logger.getLogger(MainController.class);
	// 加载不同系统
	private String[] appIds = new String[] { "WMS", "TMS", "WMS", "AUTHORITY" };

	/**
	 * 
	 * <p>Title: login</p>
	 * <p>Description: 项目登陆页面</p>
	 * <p>Company: ruishun</p>
	 * @author weil
	 * @date 2017年12月29日
	 * @return
	 */
	@RequestMapping("login")
	public String login() {
		return "login";
	}

	/**
	 * 
	 * <p>Title: checkLogin</p>
	 * <p>Description: 登陆用户</p>
	 * <p>Company: ruishun</p>
	 * @author weil
	 * @date 2017年12月29日
	 * @param erpUser
	 * @return
	 */
	@RequestMapping("check")
	@ResponseBody
	public Boolean checkLogin(ErpUser erpUser, HttpServletRequest request, HttpServletResponse response) {
		logger.info(erpUser.getUserName());
		Boolean flag = false;
		List<ErpUser> list = erpUserService.findUser(erpUser);
		if (list != null && list.size() != 0) {
			ErpUser user = list.get(0);
			request.getSession().setAttribute("user", user);
			flag = true;
		}
		return flag;
	}

	/**
	 * 
	 * <p>Title: index</p>
	 * <p>Description: 主界面加载</p>
	 * <p>Company: ruishun</p>
	 * @author weil
	 * @date 2017年12月29日
	 * @param request
	 * @param response
	 * @return
	 */
	@RequestMapping("index")
	public String index(HttpServletRequest request, HttpServletResponse response) {
		ErpUser user = (ErpUser) request.getSession().getAttribute("user");
		if (user == null) {
			return "404";
		}
		// admin不用赋权限
		for (String appId : appIds) {
			HashMap<String, Object> menu = null;
			if (user.getUserNo().equals("admin")) {
				menu = erpMenuService.getMenu(appId);
			} else {
				menu = erpMenuService.getMenuFromUser(appId, user.getUserNo());
			}
			request.getSession().setAttribute(appId + "_menus", menu);
		}
		return "index";
	}

	/**
	 * 
	 * <p>Title: welcome</p>
	 * <p>Description: 欢迎页面加载</p>
	 * <p>Company: ruishun</p>
	 * @author weil
	 * @date 2018年1月2日
	 * @return
	 */
	@RequestMapping("welcome")
	public String welcome() {
		return "welcome";
	}

	/**
	 * 
	 * <p>Title: logout</p>
	 * <p>Description: 用户退出</p>
	 * <p>Company: ruishun</p>
	 * @author weil
	 * @date 2018年1月3日
	 * @param session
	 * @return
	 */
	@RequestMapping("logout")
	public String logout(HttpSession session) {
		session.invalidate();
		return "login";
	}
}
